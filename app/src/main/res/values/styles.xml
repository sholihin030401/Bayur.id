<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="EditTextSet">
        <item name="android:padding">12dp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:background">@drawable/edt_text</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
    </style>

    <style name="CardViewPrimary">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:focusable">true</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="cardBackgroundColor">@color/colorPrimary</item>
        <item name="cardElevation">22dp</item>
    </style>

    <style name="CardViewSecondary">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:focusable">true</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">22dp</item>
    </style>

    <style name="headerContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">220dp</item>
        <item name="android:background">@drawable/header</item>
    </style>

    <style name="titleSet">
        <item name="android:textSize">22sp</item>
        <item name="android:layout_marginTop">70dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="titleSubSet">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_marginStart">15dp</item>
    </style>
</resources>