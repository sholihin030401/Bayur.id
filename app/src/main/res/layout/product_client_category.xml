<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:scrollbars="none"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/katsemua"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="22dp"
            android:foreground="?attr/selectableItemBackground"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/semua"
                android:textSize="16sp"
                android:padding="10dp"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center_horizontal"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/katsayursegar"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="22dp"
            android:foreground="?attr/selectableItemBackground"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sayur_segar"
                android:textSize="16sp"
                android:padding="10dp"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center_horizontal"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/katsayurolahan"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="22dp"
            android:foreground="?attr/selectableItemBackground"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sayur_olahan"
                android:textSize="16sp"
                android:padding="10dp"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center_horizontal"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/katbuahsegar"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="22dp"
            android:foreground="?attr/selectableItemBackground"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/buah_segar"
                android:textSize="16sp"
                android:padding="10dp"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center_horizontal"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/katbuaholahan"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="22dp"
            android:foreground="?attr/selectableItemBackground"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/buah_olahan"
                android:textSize="16sp"
                android:padding="10dp"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center_horizontal"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</HorizontalScrollView>