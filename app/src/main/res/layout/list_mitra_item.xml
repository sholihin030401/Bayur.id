<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:foreground="?attr/selectableItemBackground"
    android:focusable="true"
    app:cardCornerRadius="12dp"
    app:cardElevation="22dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_mitra_item"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/tempe"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/nama_mitra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/username_app"
            android:layout_toEndOf="@id/img_mitra_item"
            android:layout_margin="5dp"
            android:textSize="16sp"
            android:fontFamily="@font/montserrat_medium"/>

        <TextView
            android:id="@+id/alamat_mitra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/alamat_mitra"
            android:layout_toEndOf="@id/img_mitra_item"
            android:layout_below="@id/nama_mitra"
            android:fontFamily="@font/montserrat_medium"
            android:layout_margin="5dp"
            app:drawableStartCompat="@drawable/ic_place" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>